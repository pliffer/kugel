{
    "name": "kugel",
    "version": "2.0.0",
    "description": "",
    "main": "kugel.js",
    "scripts": {
        "test": "jest",
        "create": "node boot/scripts/create.js",
        "enable": "node boot/scripts/enable.js",
        "disable": "node boot/scripts/disable.js",
        "start": "nodemon kugel.js",
        "deploy": "node boot/scripts/deploy.js",
        "undeploy": "node boot/scripts/undeploy.js"
    },
    "author": "Pliffer",
    "license": "SEE IN LICENSE.md",
    "nodemonConfig": {
        "ignore": [
            "modules/*",
            "app/assets/*",
            ".cache",
            "doc/*"
        ]
    },
    "kugel": {
        "modules": {
            "core": [
                "kugel-better-express",
                "kugel-server"
            ]
        },
        "config": {
            "gzip": false,
            "morgan": "dev",
            "cors": {
                "origin": "*",
                "methods": [
                    "GET",
                    "POST",
                    "PUT",
                    "DELETE",
                    "OPTIONS"
                ],
                "headers": [
                    "Content-Type",
                    "Authorization"
                ],
                "credentials": true,
                "optionStatus": 200
            },
            "upload": false,
            "template_engine": "pug",
            "body_parser": true,
            "openapi": {
                "swagger": "3.0.0",
                "info": {
                    "title": "Sigma Panel",
                    "description": "Sigma Panel Api Description",
                    "version": "1.0.0"
                }
            },
            "modules": true,
            "state": "development"
        }
    },
    "dependencies": {
        "colors": "^1.4.0",
        "dotenv": "^16.0.3",
        "kugel-better-express": "github:pliffer/kugel-better-express",
        "kugel-server": "github:pliffer/kugel-server",
        "pug": "^3.0.2"
    },
    "devDependencies": {
        "jest": "^29.3.1",
        "superagent": "^8.0.6",
        "supertest": "^6.3.3"
    }
}
